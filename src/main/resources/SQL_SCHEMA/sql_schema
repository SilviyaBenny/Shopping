create table product(
   ID INT NOT NULL AUTO_INCREMENT,
   NAME VARCHAR(30) NOT NULL,
   QUANTITY INT NOT NULL,
   PRICE DECIMAL(7,2) NOT NULL,
   SKU VARCHAR(30) NOT NULL,
   PRIMARY KEY ( ID )
);
INSERT INTO PRODUCT (NAME, QUANTITY,PRICE,SKU,DEPARTMENT_ID) VALUES ('Book',90,100,'00B',20);
INSERT INTO PRODUCT (NAME, QUANTITY,PRICE,SKU,DEPARTMENT_ID) VALUES ('Book',90,100,'00B',20);

UPDATE PRODUCT SET QUANTITY=100 WHERE ID=5;


create table department(
	ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY ,
	DEPARTMENT_NAME VARCHAR(30),
	DESCRIPTION VARCHAR(250)
	);
	
INSERT INTO DEPARTMENT(DEPARTMENT_NAME,DESCRIPTION) VALUES ("HOME","HOME APPLIANCES");
	

UPDATE DEPARTMENT SET DEPARTMENT_NAME="Kids" WHERE ID=4;