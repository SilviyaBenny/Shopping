
create table product(
   ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY ,
   NAME VARCHAR(30) UNIQUE NOT NULL,
   QUANTITY INT NOT NULL,
   PRICE DECIMAL(7,2) NOT NULL,
   SKU VARCHAR(30) NOT NULL,
   DEPARTMENT_ID INT NOT NULL,
   DESCRIPTION varchar(250),
   CREATED_BY  VARCHAR(30) NOT NULL,
   CREATED_DATE DATE,
   MODIFIED_BY  VARCHAR(30) NOT NULL,
   MODIFIED_DATE DATE
   
   
);

INSERT INTO PRODUCT (NAME, QUANTITY,PRICE,SKU,DEPARTMENT_ID,DESCRIPTION,CREATED_BY,CREATED_DATE,MODIFIED_BY,MODIFIED_DATE) VALUES ('Book',90,100,'00B',20,'Stationary','Jill',NOW(),'Jill',NOW());

UPDATE PRODUCT SET QUANTITY=100 WHERE ID=5;

	
create table department(
	ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY ,
	DEPARTMENT_NAME VARCHAR(30) UNIQUE NOT NULL,
	DESCRIPTION VARCHAR(250),
	CREATED_BY  VARCHAR(30) NOT NULL,
	CREATED_DATE DATE,
	MODIFIED_BY  VARCHAR(30) NOT NULL,
	MODIFIED_DATE DATE
	);
	
INSERT INTO DEPARTMENT(DEPARTMENT_NAME,DESCRIPTION,CREATED_BY,CREATED_DATE,MODIFIED_BY,MODIFIED_DATE) VALUES ('HOME','HOME APPLIANCES','Jill',NOW(),'Jill',NOW());
commit;



